<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!--Overview Activity table styles-->
    <style name="DefaultColumn">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000000</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

    <style name="Header" parent="DefaultColumn">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textColor">#008</item>
        <item name="android:paddingTop">0dip</item>
    </style>

    <style name="Label" parent="Header">
        <item name="android:paddingTop">11dip</item>
    </style>

    <style name="NumberColumn" parent="DefaultColumn">
    </style>

    <style name="DisabledColumn" parent="DefaultColumn">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="android:textColor">#616161</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="DeviceNameColumn" parent="DefaultColumn">
        <item name="android:gravity">start</item>
    </style>

    <style name="DeviceTypeLabel" parent="DeviceNameColumn">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="ButtonColumn" parent="DefaultColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonInputColumn" parent="DefaultColumn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StatusCircle">
        <item name="android:layout_margin">11dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="BatteryColumn" parent="StatusCircle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="ServerStatusLabel">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:layout_gravity">end|center_horizontal</item>
    </style>

    <style name="StatusMessage">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BatteryValue" parent="DefaultColumn">
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:paddingLeft">21dip</item>
        <item name="android:paddingTop">21dip</item>
    </style>

    <!-- Compact View styles -->
    <style name="MyListSeparator">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal|bold</item>
        <!--<item name="android:background">@drawable/rounded_corner</item>-->
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="DividerLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ff0000</item>
    </style>

</resources>
